<config>
    <modules>
        <Buyshop_Faq>
            <version>0.1.0</version>
        </Buyshop_Faq>
    </modules>
    <frontend>
        <routers>
            <faq>
                <use>standard</use>
                <args>
                    <module>Buyshop_Faq</module>
                    <frontName>faq</frontName>
                </args>
            </faq>
        </routers>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Buyshop_Faq after="Mage_Adminhtml">Buyshop_Faq_Adminhtml</Buyshop_Faq>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <blocks>
            <faq>
                <class>Buyshop_Faq_Block</class>
            </faq>
        </blocks>
        <helpers>
            <faq>
                <class>Buyshop_Faq_Helper</class>
            </faq>
        </helpers>
        <models>
            <faq>
                <class>Buyshop_Faq_Model</class>
                <resourceModel>faq_mysql4</resourceModel>
            </faq>
            <faq_mysql4>
                <class>Buyshop_Faq_Model_Mysql4</class>
                <entities>		  
                    <faq>
                        <table>buyshop_faq</table>
                    </faq>
                </entities>
            </faq_mysql4>
        </models>
        <resources>
            <faq_setup>
                <setup>
                    <module>Buyshop_Faq</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faq_setup>
            <faq_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faq_write>
            <faq_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faq_read>
        </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <faq>
                    <file>faq.xml</file>
                </faq>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <faq>
                            <title>Manage FAQs</title>
                            <children>
                                <manage translate="title" module="faq">
                                    <title>FAQ Menu</title>
                                </manage>
                            </children>
                        </faq>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>