<?php if($this->getItems()->getSize()): ?>
<h3 class="m_2">Related Products</h3>
<div class="container">
    <div class="box_3">
        <?php foreach ($this->getItems() as $_item): ?>
        <div class="col-md-3">
            <div class="content_box"><a href="<?php echo $_item->getProductUrl() ?>">
                    <img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(200,300) ?>" class="img-responsive" alt="">
                </a>
            </div>
            <h4><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h4>
            <p><?php echo $this->getPriceHtml($_item, true, '-related') ?></p>
        </div>
            <?php endforeach ?>
        <div class="clearfix"> </div>
    </div>
</div>
